@model IEnumerable<ShortbrainWeb.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste des utilisateurs</h2>

<table id="users" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Id</th> 
        <th>Username</th> 
        <th>Last Name</th> 
        <th>First Name</th>
        <th>News Letter</th>
        <th>Member</th>
        <th>Delete</th>
    </tr>
    </thead> 
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <th scope="row">@user.Id</th>
            <td>@Html.ActionLink(@user.Username, "Detail", "Users", new {id=@user.Id }, null)</td>
            <td>@user.Name</td>
            <td>@user.Firstname</td>
            <td>@user.IsSubscribedToNewsLetter</td>
            <td>@user.MembershipType.Name</td>
            <td><button data-customer-id="@user.Id" class="btn-link js-delete">Delete</button></td>
        </tr>
    }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function() {
            $('#users .js-delete').on('click',
                function () {
                    var button = $(this);
                    if (confirm("Are you sure you wan to delete this customer")) {
                        $.ajax({
                            url: "/api/users/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function() {
                                button.parents('tr').remove();
                            }
                        });
                    };
                });
        });

    </script>
}