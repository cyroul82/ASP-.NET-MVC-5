@model ShortbrainWeb.ViewModels.UserFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nouveau Utilisateur</h2>

@using (Html.BeginForm("Save", "Users"))
{
    <div class="form-group">
        @Html.LabelFor(u => u.User.Username)
        @Html.TextBoxFor(u => u.User.Username, new { @class="form-control" })
        @Html.ValidationMessageFor(u => u.User.Username)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.Name)
        @Html.TextBoxFor(u => u.User.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.Firstname)
        @Html.TextBoxFor(u => u.User.Firstname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.Email)
        @Html.TextBoxFor(u => u.User.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.Birthdate)
        @Html.TextBoxFor(u => u.User.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.User.MembershipTypeId)
        @Html.DropDownListFor(u => u.User.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(u => u.User.IsSubscribedToNewsLetter) Subscribed to News Letter ?
        </label>
    </div>

    @Html.HiddenFor(u => u.User.Id)

    <button type="submit" class="btn btn-primary">Enregistrer</button>
}