@model IEnumerable<ShortbrainWeb.Models.Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste des Projets</h2>
<p>
    @Html.ActionLink("Nouveau", "New", "Projects", new { @class = "btn btn-primary" }) 
</p>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Id</th> 
        <th>Name</th> 
        <th>Category</th>
        <th></th>
    </tr>
    </thead> 
    <tbody>
    @foreach (var project in Model)
    {
        <tr>
            <th scope="row">@project.Id</th>
            <td>@Html.ActionLink(@project.Name, "Detail", "Projects", new {id=@project.Id}, null)</td>
            <td>@project.Category.Name</td>
            <td>
                @Html.ActionLink("Detail", "Detail", "Projects", new { id = @project.Id }, null) |
                @Html.ActionLink("Editer", "Edit", "Projects", new {id = @project.Id }, null) |
                @Html.ActionLink("Supprimer", "Delete", "Projects", new { id = @project.Id }, null)


            </td>
        </tr>
    }
    </tbody>
</table>